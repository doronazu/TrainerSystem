@model TrainerSystem.Models.Application.Vaccine
@{
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";

    ViewBag.Title = "טופס חיסון";
    string btnValue = "שמור שינויים";
    string header = "עדכן חיסון";
    string header2 = "ערוך חיסון קיים";
    if (Model.Id == 0)
    {
        header = "יצירת חיסון";
        header2 = "יצירת חיסון חדש.";
        btnValue = "צור חיסון";
    }
}

<h2>@header</h2>

@using (Html.BeginForm("Save", "Vaccines", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>@header2</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreateDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CreateDate, new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(p => p.Id)
    @Html.HiddenFor(p => p.CreateDate)
    @Html.HiddenFor(p => p.DogId)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-outline-primary" value="@btnValue" />
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


