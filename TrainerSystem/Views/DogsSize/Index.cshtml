@model List<TrainerSystem.Models.Application.DogSize>
@{
    ViewBag.Title = "גדלים";
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}

<h2>@ViewBag.Title</h2>


@Html.ActionLink("גודל חדש", "New", "DogsSize", new { @class = "btn btn-primary" })

<div class="mt-2">
    <table class="table table-hover table-borderless text-center">
        <thead>
            <tr class="table-primary">
                <th>שם</th>
                <th colspan="2">נהל</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var size in Model)
            {
                <tr class="align-middle">
                    <td><a href="/DogsSize/Details/@size.Id" class="btn btn-link">@size.Name</a></td>
                    <td><a href="/DogsSize/Edit/@size.Id" class="btn btn-warning">עריכה</a></td>
                    <td>
                        @using (Html.BeginForm("Delete", "DogsSize", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <input type="hidden" class="hide" name="id" id="id" value="@size.Id" />
                            <button type="submit" class="btn btn-danger">מחיקה</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



